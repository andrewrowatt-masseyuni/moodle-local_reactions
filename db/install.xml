<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/reactions/db" VERSION="20260207" COMMENT="local_reactions database tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_reactions" COMMENT="Stores emoji reactions on forum posts">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="component" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="Component e.g. mod_forum"/>
        <FIELD NAME="itemtype" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Item type e.g. post"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the item being reacted to"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who reacted"/>
        <FIELD NAME="emoji" TYPE="char" LENGTH="20" NOTNULL="true" COMMENT="Emoji shortcode e.g. thumbsup"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="user_item_emoji_unique" UNIQUE="true" FIELDS="component, itemtype, itemid, userid, emoji" COMMENT="One reaction per emoji per user per item"/>
        <INDEX NAME="item_lookup" UNIQUE="false" FIELDS="component, itemtype, itemid" COMMENT="Fast lookup of all reactions for an item"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_reactions_enabled" COMMENT="Per-forum toggle for emoji reactions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Course module ID"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 = reactions enabled"/>
        <FIELD NAME="compactview_list" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 = compact view on discussion list page"/>
        <FIELD NAME="compactview_discuss" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 = compact view on individual discussion page"/>
        <FIELD NAME="allowmultiplereactions" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="1 = users may react with multiple emoji per post (default); 0 = single emoji per user per post"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="cmid_fk" TYPE="foreign-unique" FIELDS="cmid" REFTABLE="course_modules" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
