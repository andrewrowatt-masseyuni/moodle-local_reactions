{{!
    @template local_reactions/reactions_bar

    Inline emoji reactions bar for forum posts (Teams-style).

    Classes required for JS:
    * [data-region="reactions-bar"]
    * [data-action="toggle-reaction"]
    * [data-region="reaction-count"]

    Example context (json):
    {
        "canreact": true,
        "buttons": [
            {"shortcode": "thumbsup", "unicode": "\ud83d\udc4d", "count": 3, "hascount": true, "selected": true, "canreact": true},
            {"shortcode": "heart", "unicode": "\u2764\ufe0f", "count": 0, "hascount": false, "selected": false, "canreact": true}
        ]
    }
}}
<div class="local-reactions-bar d-flex flex-wrap align-items-center mt-2 mb-1" data-region="reactions-bar">
    {{#buttons}}
        <button
            type="button"
            class="local-reactions-btn{{#selected}} local-reactions-selected{{/selected}}{{^hascount}}{{^canreact}} local-reactions-empty{{/canreact}}{{/hascount}}"
            data-action="toggle-reaction"
            data-emoji="{{shortcode}}"
            aria-pressed="{{#selected}}true{{/selected}}{{^selected}}false{{/selected}}"
            aria-label="{{unicode}}"
            {{^canreact}}disabled{{/canreact}}
        >
            <span class="local-reactions-emoji" aria-hidden="true">{{unicode}}</span>
            <span class="local-reactions-count" data-region="reaction-count">{{#hascount}}{{count}}{{/hascount}}</span>
        </button>
    {{/buttons}}
</div>
